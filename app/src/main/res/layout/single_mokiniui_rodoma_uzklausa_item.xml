<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#EFF2F3"
        android:id="@+id/ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="20dp">

        <ImageView
            android:id="@+id/mokinioUzklausosKorPFP"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/vardasKorteleLaukiamoKorepetitoriaus"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/mokinioUzklausosKorPFP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toRightOf="@+id/mokinioUzklausosKorPFP"
            android:gravity="center|left"
            android:text="Korepetitorius: Vardas Pavardė"
            android:textSize="20sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="80sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="sans-serif-black"
            app:layout_constraintEnd_toStartOf="@+id/buttonAtšauktiMokiniui"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/mokinioUzklausosKorPFP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/uzklausosStatusasMokiniui"
            android:layout_width="193dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/vardasKorteleLaukiamoKorepetitoriaus"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/mokinioUzklausosKorPFP"
            android:gravity="top|left"
            android:text="Laukiama patvirtinimo."
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mokinioUzklausosKorPFP"
            app:layout_constraintTop_toBottomOf="@+id/vardasKorteleLaukiamoKorepetitoriaus" />

        <Button
            android:id="@+id/buttonAtšauktiMokiniui"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_baseline_highlight_off_24"
            app:backgroundTint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>