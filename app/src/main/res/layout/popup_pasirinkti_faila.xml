<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/uzdarytiIkeltiLanga"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_outline_cancel_24"
            app:backgroundTint="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pridėti failą"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pavadinimas:" />

        <EditText
            android:id="@+id/pavadinimasPopup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="top|left"
            app:backgroundTint="#2135B6"
            android:hint="Pavadinimas"
            android:inputType="textMultiLine"
            android:isScrollContainer="true" />

        <Button
            android:id="@+id/pasirinktiFailaButton"
            android:layout_width="195dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:background="#6A6A6A"
            android:layout_below="@+id/pavadinimasPopup"
            android:layout_marginTop="16dp"
            android:text="Pasirinkti Failą" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/failoPavadinimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/pavadinimasPopup"
            android:text="Pasirinktas failas: "
            android:textSize="14sp"
            app:autoSizeMaxTextSize="80sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"/>

        <Button
            android:id="@+id/ikeltiFaila"
            android:layout_width="300dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/pavadinimasPopup"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:text="Pridėti" />

    </LinearLayout>

</RelativeLayout>