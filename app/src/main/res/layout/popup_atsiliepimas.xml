<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="450dp"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/uzdarytiAtsiliepimoLanga"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_outline_cancel_24"
            app:backgroundTint="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rašyti atsiliepimą"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:fontFamily="sans-serif-black" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Įvertinkite: " />

            <RatingBar
                android:id="@+id/ratingBarPopup"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:transformPivotX="0dp"
                android:transformPivotY="40dp"
                android:stepSize="0.5"
                android:progressTint="@color/blue_for_buttons"
                android:rating="0"
                android:numStars="5"
                android:isIndicator="false"
                android:layout_toEndOf="@+id/textView9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Atsiliepimas:" />

        <EditText
            android:id="@+id/aprasymasPopup"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/container_border"
            android:gravity="top|left"
            android:hint="Aprašymas"
            android:inputType="textMultiLine"
            android:isScrollContainer="true" />

        <Button
            android:id="@+id/skelbtiAtsiliepima"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/aprasymasPopup"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:text="Skelbti" />

    </LinearLayout>

</RelativeLayout>