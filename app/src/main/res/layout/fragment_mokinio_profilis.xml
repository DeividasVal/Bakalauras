<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mokinioPFPProfilis"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:background="@drawable/pfp_circle"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_account_circle_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewvardas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Vardas" />

    <TextView
        android:id="@+id/vardasMokinys"
        android:layout_width="340dp"
        android:text="Vardas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="sans-serif-black"
        android:gravity="center|left"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textView1vart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Vartotojo vardas" />

    <TextView
        android:id="@+id/vartotojoMokinys"
        android:layout_width="340dp"
        android:text="Vartotojo vardas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="sans-serif-black"
        android:gravity="center|left"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textView145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="El. paštas" />

    <TextView
        android:id="@+id/emailMokinys"
        android:layout_width="340dp"
        android:text="El. paštas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="sans-serif-black"
        android:gravity="center|left"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"
        android:id="@+id/RedaguotiButton"
        android:layout_marginTop="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Redaguoti" />

</LinearLayout>